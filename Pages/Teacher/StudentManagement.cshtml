@page
@using StudentClassworkPortal.Areas.Identity.Data
@model StudentManagementModel
@{
    ViewData["Title"] = "Student Management";
}
@{
    ViewData["Title"] = "Student Management";
}

<div class="container mx-auto px-4 py-8">

    <a asp-page="./Dashboard"
       class="text-primary hover:text-primary-dark dark:text-primary-light dark:hover:text-primary mb-4 inline-block">&larr;
        Back to
        Dashboard</a>
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-on-surface dark:text-dark-on-surface">@ViewData["Title"]</h1>
        <div class="flex space-x-2">
            <button type="button" id="bulkImportBtn"
                    class="bg-secondary text-on-secondary font-bold py-2 px-4 rounded-md hover:bg-secondary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary">
                Bulk Import
            </button>
            <a asp-page="./CreateUser"
               class="bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">Create
                Student</a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-6 p-4 bg-green-100 dark:bg-green-900/50 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 rounded-md">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400 dark:text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-6 p-4 bg-red-100 dark:bg-red-900/50 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 rounded-md">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400 dark:text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">@TempData["ErrorMessage"]</p>
                    @if (TempData["ErrorDetails"] != null)
                    {
                                <div class="mt-2 text-sm">
                                    <details class="cursor-pointer">
                                        <summary class="font-medium hover:underline">Show error details</summary>
                                        <div class="mt-2 pl-4 border-l-2 border-red-300 dark:border-red-600">
                                            @((string)TempData["ErrorDetails"]!)
                                        </div>
                                    </details>
                                </div>
                    }
                </div>
            </div>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="mb-6 p-4 bg-red-100 dark:bg-red-900/50 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 rounded-md">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400 dark:text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <div class="text-sm">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Students by Class -->
    <div class="mt-12">
        <h2 class="text-2xl font-semibold text-on-surface dark:text-dark-on-surface mb-4">Browse Students by Class</h2>
        <form method="post">
            <div class="bg-surface rounded-lg shadow-md dark:bg-dark-surface">
                <div class="space-y-2 p-4">
                    @if (Model.StudentsByClass.Any())
                    {
                        <div class="flex justify-end space-x-4 mb-4">
                            <button type="submit" asp-page-handler="DeleteSelected"
                                    class="bg-red-600 text-white font-bold py-2 px-4 rounded-md hover:bg-red-700">Delete
                                Selected
                            </button>
                            <button type="button" id="promoteSelectedBtn"
                                    class="bg-blue-600 text-white font-bold py-2 px-4 rounded-md hover:bg-blue-700">
                                Promote Selected
                            </button>
                        </div>

                        @foreach (var classGroup in Model.StudentsByClass.OrderBy(cg => cg.Key.ToString()))
                        {
                            <details class="group">
                                <summary
                                    class="flex items-center justify-between p-4 cursor-pointer bg-surface-container-high dark:bg-gray-800 rounded-lg hover:bg-surface-container-highest dark:hover:bg-gray-700">
                                    <h3 class="text-lg font-medium text-on-surface dark:text-dark-on-surface">
                                        Class @classGroup.Key.ToString()</h3>
                                    <svg
                                        class="w-5 h-5 text-on-surface-variant dark:text-gray-400 transform group-open:rotate-180 transition-transform"
                                        xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M19 9l-7 7-7-7"/>
                                    </svg>
                                </summary>
                                <div class="px-4 pt-2 pb-4">
                                    @foreach (var sectionGroup in classGroup.Value.OrderBy(sg => sg.Key.ToString()))
                                    {
                                        <h4 class="text-md font-semibold text-on-surface-variant dark:text-gray-400 mt-4 mb-2">
                                            Section @sectionGroup.Key.ToString()</h4>
                                        <table class="min-w-full bg-surface-container dark:bg-gray-700 rounded-md">
                                            <thead>
                                            <tr>
                                                <th class="px-6 py-3 text-left text-xs font-medium text-on-surface-variant dark:text-gray-400 uppercase tracking-wider">
                                                    <input type="checkbox"
                                                           id="selectAll-@classGroup.Key-@sectionGroup.Key"
                                                           data-group="@classGroup.Key-@sectionGroup.Key"
                                                           class="select-all-checkbox"/>
                                                </th>
                                                <th class="px-6 py-3 text-left text-xs font-medium text-on-surface-variant dark:text-gray-400 uppercase tracking-wider">
                                                    Name
                                                </th>
                                                <th class="px-6 py-3 text-left text-xs font-medium text-on-surface-variant dark:text-gray-400 uppercase tracking-wider">
                                                    Username
                                                </th>
                                                <th class="px-6 py-3 text-left text-xs font-medium text-on-surface-variant dark:text-gray-400 uppercase tracking-wider">
                                                    Actions
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody class="divide-y divide-outline dark:divide-gray-600">
                                            @foreach (var student in sectionGroup.Value)
                                            {
                                                <tr>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <input type="checkbox" name="selectedStudents"
                                                               value="@student.Id"
                                                               class="student-checkbox-@classGroup.Key-@sectionGroup.Key"/>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap dark:text-dark-on-surface">@student.Name</td>
                                                    <td class="px-6 py-4 whitespace-nowrap dark:text-dark-on-surface">@student.UserName</td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <a asp-page="./EditStudent" asp-route-id="@student.Id"
                                                           class="text-primary hover:underline dark:text-primary-light">Edit</a>
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </details>
                        }
                    }
                    else
                    {
                        <p class="text-center text-on-surface-variant dark:text-gray-400 py-8">No students found to
                            display by class.</p>
                    }
                </div>
            </div>
        </form>
    </div>

    <!-- Promotion Modal -->
    <div id="promotionModal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
         role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-black/30 backdrop-blur-sm transition-opacity" aria-hidden="true"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div
                class="inline-block align-bottom bg-surface dark:bg-dark-surface rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <form method="post" asp-page-handler="PromoteSelected">
                    <div class="bg-surface dark:bg-dark-surface px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        <div class="sm:flex sm:items-start">
                            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                                <h3 class="text-lg leading-6 font-medium text-on-surface dark:text-dark-on-surface"
                                    id="modal-title">Promote
                                    Students</h3>
                                <div class="mt-2">
                                    <p class="text-sm text-on-surface-variant dark:text-gray-400">Select the new class
                                        and section for the
                                        selected students.</p>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                                        <div>
                                            <label for="newClass"
                                                   class="block text-sm font-medium text-on-surface-variant dark:text-gray-400 mb-1">New
                                                Class</label>
                                            <select name="newClass" id="newClass"
                                                    class="w-full px-4 py-2 bg-surface-container-highest dark:bg-gray-600 border border-outline dark:border-gray-500 rounded-md focus:ring-primary focus:border-primary">
                                                <option value="">Select Class</option>
                                                @foreach (var classValue in Html.GetEnumSelectList<StudentClass>())
                                                {
                                                    <option value="@classValue.Value">@classValue.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div>
                                            <label for="newSection"
                                                   class="block text-sm font-medium text-on-surface-variant dark:text-gray-400 mb-1">New
                                                Section</label>
                                            <select name="newSection" id="newSection"
                                                    class="w-full px-4 py-2 bg-surface-container-highest dark:bg-gray-600 border border-outline dark:border-gray-500 rounded-md focus:ring-primary focus:border-primary">
                                                <option value="">Select Section</option>
                                                @foreach (var sectionValue in Html.GetEnumSelectList<StudentSection>())
                                                {
                                                    <option value="@sectionValue.Value">@sectionValue.Text</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="bg-surface-container-high dark:bg-gray-800 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                        <button type="submit"
                                class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-primary text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary sm:ml-3 sm:w-auto sm:text-sm">
                            Promote
                        </button>
                        <button type="button" id="cancelPromotionBtn"
                                class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bulk Import Modal -->
    <div id="bulkImportModal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
         role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-black/30 backdrop-blur-sm transition-opacity" aria-hidden="true"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div
                class="inline-block align-bottom bg-surface dark:bg-dark-surface rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <form method="post" asp-page-handler="BulkImport" enctype="multipart/form-data">
                    <div class="bg-surface dark:bg-dark-surface px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        <div class="sm:flex sm:items-start">
                            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                                <h3 class="text-lg leading-6 font-medium text-on-surface dark:text-dark-on-surface"
                                    id="bulk-modal-title">Bulk Import
                                    Students</h3>
                                <div class="mt-2">
                                    <p class="text-sm text-on-surface-variant dark:text-gray-400">Upload a CSV file with
                                        student data. The
                                        file should have the following columns: Name, Username, Password,
                                        Class, Section.</p>
                                    <div class="mt-4">
                                        <a asp-page-handler="DownloadSampleCsv"
                                           class="text-sm text-primary hover:underline dark:text-primary-light">Download
                                            Sample CSV</a>
                                    </div>
                                    <div class="mt-4">
                                        <label for="bulkImportFile"
                                               class="block text-sm font-medium text-on-surface-variant dark:text-gray-400 mb-1">CSV
                                            File</label>
                                        <input type="file" name="bulkImportFile" id="bulkImportFile" accept=".csv"
                                               class="w-full px-4 py-2 bg-surface-container-highest dark:bg-gray-600 border border-outline dark:border-gray-500 rounded-md focus:ring-primary focus:border-primary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="bg-surface-container-high dark:bg-gray-800 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                        <button type="submit"
                                class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-primary text-base font-medium text-white hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary sm:ml-3 sm:w-auto sm:text-sm">
                            Import
                        </button>
                        <button type="button" id="cancelBulkImportBtn"
                                class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Logic for promotion modal
        const promotionModal = document.getElementById('promotionModal');
        const promoteSelectedBtn = document.getElementById('promoteSelectedBtn');
        const cancelPromotionBtn = document.getElementById('cancelPromotionBtn');

        if (promoteSelectedBtn) {
            promoteSelectedBtn.addEventListener('click', () => {
                const selectedStudents = document.querySelectorAll('input[name="selectedStudents"]:checked');
                if (selectedStudents.length > 0) {
                    promotionModal.classList.remove('hidden');
                } else {
                    alert('Please select at least one student to promote.');
                }
            });
        }

        if (cancelPromotionBtn) {
            cancelPromotionBtn.addEventListener('click', () => {
                promotionModal.classList.add('hidden');
            });
        }

        // Logic for bulk import modal
        const bulkImportModal = document.getElementById('bulkImportModal');
        const bulkImportBtn = document.getElementById('bulkImportBtn');
        const cancelBulkImportBtn = document.getElementById('cancelBulkImportBtn');

        if (bulkImportBtn) {
            bulkImportBtn.addEventListener('click', () => {
                bulkImportModal.classList.remove('hidden');
            });
        }
        
        if (cancelBulkImportBtn) {
            cancelBulkImportBtn.addEventListener('click', () => {
                bulkImportModal.classList.add('hidden');
            });
        }

        // Logic for select-all checkboxes
        const selectAllCheckboxes = document.querySelectorAll('.select-all-checkbox');
        selectAllCheckboxes.forEach(headerCheckbox => {
            headerCheckbox.addEventListener('change', function() {
                const group = this.getAttribute('data-group');
                const studentCheckboxes = document.querySelectorAll(`.student-checkbox-${group}`);
                studentCheckboxes.forEach(studentCheckbox => {
                    studentCheckbox.checked = this.checked;
                });
            });
        });
    });
    </script>
}
