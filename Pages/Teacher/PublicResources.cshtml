@page
@using StudentClassworkPortal.Areas.Identity.Data
@model PublicResourcesModel
@{
    ViewData["Title"] = "Public Resources";
}

<div class="container mx-auto px-4 py-8">
    <a asp-page="./Dashboard" class="text-primary hover:text-primary-dark mb-4 inline-block">&larr; Back to
        Dashboard</a>
    <h1 class="text-3xl font-bold text-on-surface mb-6">@ViewData["Title"]</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
            <h2 class="text-2xl font-semibold text-on-surface mb-4">Create New Subject</h2>
            <div class="bg-surface rounded-lg shadow-md p-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-error mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="Input.Subject"
                               class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                        <input asp-for="Input.Subject"
                               class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary"/>
                        <span asp-validation-for="Input.Subject" class="text-error text-sm mt-1"></span>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="Input.Class"
                                   class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                            <select asp-for="Input.Class" asp-items="Html.GetEnumSelectList<StudentClass>()"
                                    class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary">
                                <option>Select Class</option>
                            </select>
                            <span asp-validation-for="Input.Class" class="text-error text-sm mt-1"></span>
                        </div>
                        <div>
                            <label asp-for="Input.Chapter"
                                   class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                            <input asp-for="Input.Chapter"
                                   class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary"/>
                            <span asp-validation-for="Input.Chapter" class="text-error text-sm mt-1"></span>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="w-full bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Create Subject
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <h2 class="text-2xl font-semibold text-on-surface mb-4">Existing Subjects</h2>
            <div class="bg-surface rounded-lg shadow-md p-6">
                @if (Model.PublicFolders.Any())
                {
                    <ul class="space-y-4">
                        @foreach (var folder in Model.PublicFolders)
                        {
                            <li class="bg-surface-container-high p-4 rounded-md flex justify-between items-center">
                                <div>
                                    <h3 class="font-bold text-lg text-on-surface-variant">@folder.AssignmentName</h3>
                                    <p class="text-sm text-on-surface-variant"><strong>Class:</strong> @folder.Class</p>
                                    <p class="text-sm text-on-surface-variant"><strong>Chapter:</strong> @folder.Chapter
                                    </p>
                                </div>
                                <a asp-page="./UploadToPublicFolder" asp-route-folderId="@folder.Id"
                                   class="text-primary hover:text-primary-dark font-medium">Manage Files</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-on-surface-variant">No public subjects found.</p>
                }
            </div>
        </div>
    </div>
</div>