@page "{id}"
@using StudentClassworkPortal.Areas.Identity.Data
@model StudentClassworkPortal.Pages.Teacher.EditStudentModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="max-w-2xl mx-auto bg-surface rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-on-surface mb-6">@ViewData["Title"]</h1>

    <form id="editStudentForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
        <input type="hidden" asp-for="Input.Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="mb-4">
                <label asp-for="Input.FirstName" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                <input asp-for="Input.FirstName" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Input.FirstName" class="text-red-500 text-sm mt-1"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.LastName" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                <input asp-for="Input.LastName" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary" />
                <span asp-validation-for="Input.LastName" class="text-red-500 text-sm mt-1"></span>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="Input.Username" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
            <input asp-for="Input.Username" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary" />
            <span asp-validation-for="Input.Username" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="mb-4">
                <label asp-for="Input.Class" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                <select asp-for="Input.Class" asp-items="Html.GetEnumSelectList<StudentClass>()" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary">
                    <option value="">Select Class</option>
                </select>
                <span asp-validation-for="Input.Class" class="text-red-500 text-sm mt-1"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.Section" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                <select asp-for="Input.Section" asp-items="Html.GetEnumSelectList<StudentSection>()" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary">
                    <option value="">Select Section</option>
                </select>
                <span asp-validation-for="Input.Section" class="text-red-500 text-sm mt-1"></span>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="Input.Password" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
            <input asp-for="Input.Password" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary" autocomplete="new-password" />
            <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1"></span>
        </div>

        <button id="updateUserSubmit" type="submit" class="w-full bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">Update User</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
