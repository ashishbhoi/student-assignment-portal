@page "{folderId:int}"
@model StudentClassworkPortal.Pages.Teacher.UploadToPublicFolderModel
@{
    ViewData["Title"] = "Manage Public Files";
}

<div class="container mx-auto px-4 py-8">
    <a asp-page="./PublicResources" class="text-primary hover:text-primary-dark mb-4 inline-block">&larr; Back to Public Resources</a>
    <h1 class="text-3xl font-bold text-on-surface mb-2">@ViewData["Title"]</h1>
    <h2 class="text-xl text-on-surface-variant mb-6">Subject: @Model.Folder.AssignmentName</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
            <h3 class="text-2xl font-semibold text-on-surface mb-4">Upload New File</h3>
            <div class="bg-surface rounded-lg shadow-md p-6">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="folderId" value="@Model.Folder.Id" />
                    <div class="mb-4">
                        <label for="newFileName" class="block text-sm font-medium text-on-surface-variant mb-1">File Name</label>
                        <input type="text" name="newFileName" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary" placeholder="Enter a name for the file" required />
                    </div>
                    <div class="mb-4">
                        <label for="fileUpload" class="block text-sm font-medium text-on-surface-variant mb-1">Select File</label>
                        <input type="file" name="fileUpload" class="block w-full text-sm text-on-surface-variant file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-primary-container file:text-on-primary-container hover:file:bg-primary" required />
                    </div>
                    <button type="submit" class="w-full bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark">Upload</button>
                </form>
            </div>
        </div>

        <div>
            <h3 class="text-2xl font-semibold text-on-surface mb-4">Uploaded Files</h3>
            <div class="bg-surface rounded-lg shadow-md p-6">
                @if (Model.Folder.UserFiles.Any())
                {
                    <ul class="space-y-3">
                        @foreach (var file in Model.Folder.UserFiles)
                        {
                            <li class="bg-surface-container-high p-3 rounded-md flex justify-between items-center">
                                <span class="text-on-surface-variant">@file.FileName</span>
                                <form method="post" asp-page-handler="DeleteFile" onsubmit="return confirm('Are you sure you want to delete this file?');">
                                    <input type="hidden" name="fileId" value="@file.Id" />
                                    <input type="hidden" name="folderId" value="@Model.Folder.Id" />
                                    <button type="submit" class="text-sm text-error hover:text-error-dark font-medium">Delete</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-on-surface-variant">No files have been uploaded to this folder yet.</p>
                }
            </div>
        </div>
    </div>
</div>
