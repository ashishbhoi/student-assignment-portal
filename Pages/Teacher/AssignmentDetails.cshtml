@page "{id:int}"
@model AssignmentDetailsModel
@{
    ViewData["Title"] = "Assignment Details";
}

<div class="container mx-auto px-4 py-8 relative z-10">
    <div class="mb-6">
        <a asp-page="./Dashboard"
           class="text-sm font-bold text-on-surface/80 hover:text-accent dark:text-dark-on-surface/80 dark:hover:text-accent inline-flex items-center transition-colors">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            Back to Dashboard
        </a>
    </div>

    <div class="mb-8">
        <h1 class="text-3xl font-bold text-on-surface dark:text-dark-on-surface mb-2 drop-shadow-sm">@Model.Assignment.AssignmentName</h1>
        <p class="text-lg text-on-surface/60 dark:text-dark-on-surface/60 font-medium">
            Class: <span class="text-on-surface dark:text-dark-on-surface">@Model.Assignment.Class-@Model.Assignment.Section</span>
        </p>
    </div>

    <!-- Submission Report -->
    <div class="rounded-2xl border border-white/40 bg-white/40 backdrop-blur-xl shadow-xl p-8 mb-10 dark:border-white/10 dark:bg-black/30">
        <h2 class="text-xl font-bold text-on-surface dark:text-dark-on-surface mb-6 uppercase tracking-wide">Submission Report</h2>
        <div class="grid grid-cols-3 gap-8 divide-x divide-on-surface/10 dark:divide-white/10">
            <div class="text-center px-4">
                <p class="text-5xl font-extrabold text-primary dark:text-white drop-shadow-sm">@Model.SubmissionCount</p>
                <p class="text-sm font-bold text-on-surface/60 dark:text-dark-on-surface/60 mt-1 uppercase tracking-wider">Submitted</p>
            </div>
            <div class="text-center px-4">
                <p class="text-5xl font-extrabold text-on-surface/70 dark:text-dark-on-surface/70">@Model.TotalStudents</p>
                <p class="text-sm font-bold text-on-surface/60 dark:text-dark-on-surface/60 mt-1 uppercase tracking-wider">Total Students</p>
            </div>
            <div class="text-center px-4">
                <p class="text-5xl font-extrabold text-error dark:text-red-400 drop-shadow-sm">@(Model.TotalStudents - Model.SubmissionCount)</p>
                <p class="text-sm font-bold text-on-surface/60 dark:text-dark-on-surface/60 mt-1 uppercase tracking-wider">Not Submitted</p>
            </div>
        </div>
    </div>

    <!-- Student Submissions -->
    <div class="rounded-2xl border border-white/40 bg-white/40 backdrop-blur-xl shadow-xl overflow-hidden dark:border-white/10 dark:bg-black/30">
        <div class="p-6 border-b border-white/20 dark:border-white/10 bg-white/20 dark:bg-white/5">
            <h2 class="text-xl font-bold text-on-surface dark:text-dark-on-surface">Student Submissions</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-white/20 dark:divide-white/10">
                <thead class="bg-white/30 dark:bg-black/40">
                <tr>
                    <th scope="col"
                        class="px-6 py-4 text-left text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider">
                        Student Name
                    </th>
                    <th scope="col"
                        class="px-6 py-4 text-left text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider">
                        Email
                    </th>
                    <th scope="col"
                        class="px-6 py-4 text-left text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider">
                        Status
                    </th>
                    <th scope="col" class="relative px-6 py-4">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
                </thead>
                <tbody class="divide-y divide-white/10 dark:divide-white/5 bg-transparent">
                @foreach (var item in Model.Submissions)
                {
                    <tr class="hover:bg-white/20 dark:hover:bg-white/5 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-on-surface dark:text-dark-on-surface">@item.StudentName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-on-surface/80 dark:text-dark-on-surface/80 font-mono">@item.StudentEmail</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            @if (item.Submission != null)
                            {
                                <span
                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400 shadow-sm border border-green-200 dark:border-green-900/50">Submitted</span>
                            }
                            else
                            {
                                <span
                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 shadow-sm border border-red-200 dark:border-red-900/50">Not Submitted</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            @if (item.Submission != null)
                            {
                                <a asp-page="/FileViewer/Index" asp-route-id="@item.Submission.Id"
                                   class="text-accent hover:text-accent-hover dark:text-accent dark:hover:text-white font-bold transition-colors inline-flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                                    View File
                                </a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
