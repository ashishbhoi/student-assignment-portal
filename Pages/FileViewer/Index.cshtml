@page "{id:int}"
@using System.Web
@model IndexModel
@{
    ViewData["Title"] = "File Viewer";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-4">
        <a onclick="window.history.back();" class="text-primary hover:text-primary-dark cursor-pointer">&larr; Back</a>
    </div>

    <h1 class="text-3xl font-bold text-on-surface mb-4">@Model.FileToDisplay.FileName</h1>

    <div class="bg-surface rounded-lg shadow-md p-6">
        <pre><code
                class="language-@Model.FileExtension">@Html.Raw(HttpUtility.HtmlEncode(Model.FileToDisplay.Content))</code></pre>
    </div>
</div>

