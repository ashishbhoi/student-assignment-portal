<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - StudentClassworkPortal</title>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/StudentClassworkPortal.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/prism.min.css"/>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body
    class="bg-background text-on-background dark:bg-dark-background dark:text-dark-on-background flex flex-col min-h-screen">
<header class="bg-surface shadow-md dark:bg-dark-surface">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a class="text-2xl font-bold text-on-surface dark:text-dark-on-surface" asp-area="" asp-page="/Index">Student
            Portal</a>
        <div class="flex space-x-4 items-center">
            <a class="text-on-surface hover:text-primary dark:text-dark-on-surface" asp-area=""
               asp-page="/Index">Home</a>
            <a class="text-on-surface hover:text-primary dark:text-dark-on-surface" asp-area="" asp-page="/Privacy">Privacy</a>
            @if (User.IsInRole("Teacher"))
            {
                <a class="text-on-surface hover:text-primary dark:text-dark-on-surface" asp-area=""
                   asp-page="/Teacher/PublicResources">Public
                    Resources</a>
            }
            <button id="theme-toggle" type="button"
                    class="text-on-surface dark:text-dark-on-surface hover:text-primary focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5">
                <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                </svg>
                <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                     xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 5.05A1 1 0 016.465 3.636l.707.707a1 1 0 01-1.414 1.414l-.707-.707a1 1 0 010-1.414zM5 11a1 1 0 100-2H4a1 1 0 100 2h1zM8 16a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1z"></path>
                </svg>
            </button>
            <partial name="_LoginPartial"/>
        </div>
    </nav>
</header>
<div class="container mx-auto px-6 py-8 flex-grow">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="bg-white border-t mt-8 py-4 dark:bg-dark-surface dark:border-gray-700">
    <div class="container mx-auto px-6 text-center text-gray-600 dark:text-gray-400">
        &copy; 2025 - StudentClassworkPortal - <a asp-area="" asp-page="/Privacy"
                                                  class="hover:text-gray-800 dark:hover:text-white">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery.min.js"></script>
<script src="~/lib/prism-core.min.js"></script>
<script src="~/lib/prism-autoloader.min.js"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>

