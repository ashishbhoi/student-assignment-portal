<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Student Portal</title>
    <link rel="icon" type="image/png" href="~/icon.png" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/StudentClassworkPortal.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/prism.min.css"/>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Inter Font (You might want to bundle this locally if strict offline is required, but for now we assume system fonts or cached) -->
</head>
<body class="bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-indigo-100 via-purple-100 to-teal-100 dark:bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] dark:from-gray-900 dark:via-indigo-950 dark:to-black text-on-background dark:text-dark-on-background flex flex-col min-h-screen font-sans antialiased selection:bg-accent selection:text-white">

<header class="sticky top-0 z-50 w-full border-b border-white/20 bg-white/10 backdrop-blur-xl dark:border-white/10 dark:bg-black/20 shadow-sm">
    <nav class="container mx-auto px-6 h-16 flex justify-between items-center">
        <a class="flex items-center gap-3 text-xl font-bold tracking-tight text-on-surface dark:text-dark-on-surface hover:text-accent transition-colors drop-shadow-sm" asp-area="" asp-page="/Index">
            <img src="~/icon.png" alt="Logo" class="h-8 w-8 rounded-lg shadow-sm object-contain flex-shrink-0" />
            Student Portal
        </a>
        
        <div class="flex items-center gap-6">
            <div class="hidden md:flex items-center gap-6">
                <a class="text-sm font-medium text-on-surface/80 hover:text-on-surface dark:text-dark-on-surface/80 dark:hover:text-dark-on-surface transition-colors hover:drop-shadow-md" asp-area="" asp-page="/Index">Home</a>
                <a class="text-sm font-medium text-on-surface/80 hover:text-on-surface dark:text-dark-on-surface/80 dark:hover:text-dark-on-surface transition-colors hover:drop-shadow-md" asp-area="" asp-page="/Privacy">Privacy</a>
                @if (User.IsInRole("Teacher"))
                {
                    <a class="text-sm font-medium text-on-surface/80 hover:text-on-surface dark:text-dark-on-surface/80 dark:hover:text-dark-on-surface transition-colors hover:drop-shadow-md" asp-area="" asp-page="/Teacher/PublicResources">Resources</a>
                }
            </div>

            <div class="flex items-center gap-4">
                <button id="theme-toggle" type="button"
                        class="rounded-full p-2 text-on-surface/80 hover:bg-white/20 dark:text-dark-on-surface/80 dark:hover:bg-white/10 focus:outline-none transition-colors backdrop-blur-md border border-transparent hover:border-white/30">
                    <span class="sr-only">Toggle theme</span>
                    <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                    </svg>
                    <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 5.05A1 1 0 016.465 3.636l.707.707a1 1 0 01-1.414 1.414l-.707-.707a1 1 0 010-1.414zM5 11a1 1 0 100-2H4a1 1 0 100 2h1zM8 16a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1z"></path>
                    </svg>
                </button>
                <div class="h-6 w-px bg-on-surface/10 dark:bg-dark-on-surface/10"></div>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>

<div class="container mx-auto px-6 py-12 flex-grow relative z-10">
    <main role="main" class="w-full max-w-6xl mx-auto">
        @RenderBody()
    </main>
</div>

<footer class="border-t border-white/20 bg-white/10 backdrop-blur-lg dark:border-white/5 dark:bg-black/20 py-8 mt-12">
    <div class="container mx-auto px-6 text-center">
        <p class="text-sm text-on-surface/70 dark:text-dark-on-surface/70 font-medium">
            &copy; 2025 Student Classwork Portal. <a asp-area="" asp-page="/Privacy" class="hover:text-on-surface dark:hover:text-dark-on-surface transition-colors underline decoration-dashed underline-offset-4">Privacy</a>
        </p>
    </div>
</footer>

<script src="~/lib/jquery.min.js"></script>
<script src="~/lib/prism-core.min.js"></script>
<script src="~/lib/prism-autoloader.min.js"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>