@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="rounded-2xl border border-white/40 bg-white/40 backdrop-blur-xl shadow-xl p-4 dark:border-white/10 dark:bg-black/30">
    <nav class="space-y-1">
        <a class="block px-4 py-3 rounded-lg text-sm font-bold transition-all @(ManageNavPages.IndexNavClass(ViewContext) == "active" ? "bg-primary text-on-primary shadow-md dark:bg-primary-dark dark:text-dark-on-primary" : "text-on-surface/70 hover:bg-white/50 hover:text-on-surface dark:text-dark-on-surface/70 dark:hover:bg-white/10 dark:hover:text-white")"
           id="profile"
           asp-page="./Index">Profile</a>
           
        <a class="block px-4 py-3 rounded-lg text-sm font-bold transition-all @(ManageNavPages.EmailNavClass(ViewContext) == "active" ? "bg-primary text-on-primary shadow-md dark:bg-primary-dark dark:text-dark-on-primary" : "text-on-surface/70 hover:bg-white/50 hover:text-on-surface dark:text-dark-on-surface/70 dark:hover:bg-white/10 dark:hover:text-white")"
           id="email"
           asp-page="./Email">Email</a>
           
        <a class="block px-4 py-3 rounded-lg text-sm font-bold transition-all @(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? "bg-primary text-on-primary shadow-md dark:bg-primary-dark dark:text-dark-on-primary" : "text-on-surface/70 hover:bg-white/50 hover:text-on-surface dark:text-dark-on-surface/70 dark:hover:bg-white/10 dark:hover:text-white")"
           id="change-password" asp-page="./ChangePassword">Password</a>

        @if (hasExternalLogins)
        {
            <a id="external-login"
               class="block px-4 py-3 rounded-lg text-sm font-bold transition-all @(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? "bg-primary text-on-primary shadow-md dark:bg-primary-dark dark:text-dark-on-primary" : "text-on-surface/70 hover:bg-white/50 hover:text-on-surface dark:text-dark-on-surface/70 dark:hover:bg-white/10 dark:hover:text-white")"
               asp-page="./ExternalLogins">External logins</a>
        }
        
        <a class="block px-4 py-3 rounded-lg text-sm font-bold transition-all @(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) == "active" ? "bg-primary text-on-primary shadow-md dark:bg-primary-dark dark:text-dark-on-primary" : "text-on-surface/70 hover:bg-white/50 hover:text-on-surface dark:text-dark-on-surface/70 dark:hover:bg-white/10 dark:hover:text-white")"
           id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a>
           
        <a class="block px-4 py-3 rounded-lg text-sm font-bold transition-all @(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? "bg-primary text-on-primary shadow-md dark:bg-primary-dark dark:text-dark-on-primary" : "text-on-surface/70 hover:bg-white/50 hover:text-on-surface dark:text-dark-on-surface/70 dark:hover:bg-white/10 dark:hover:text-white")"
           id="personal-data" asp-page="./PersonalData">Personal data</a>
    </nav>
</div>
