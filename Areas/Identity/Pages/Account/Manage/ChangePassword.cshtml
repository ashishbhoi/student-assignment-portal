@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="rounded-2xl border border-white/40 bg-white/40 backdrop-blur-xl shadow-xl p-8 dark:border-white/10 dark:bg-black/30">
    <h3 class="text-2xl font-bold text-on-surface dark:text-dark-on-surface mb-6 drop-shadow-sm">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage"/>

    <form id="change-password-form" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 dark:text-red-400 text-sm font-medium" role="alert"></div>

        <div class="group">
            <label asp-for="Input.OldPassword"
                   class="block text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider mb-1"></label>
            <input asp-for="Input.OldPassword"
                   class="block w-full px-0 py-2 bg-transparent border-b-2 border-on-surface/20 focus:border-primary focus:ring-0 dark:border-white/20 dark:focus:border-white transition-colors placeholder-transparent text-on-surface dark:text-dark-on-surface font-medium"
                   autocomplete="current-password" aria-required="true" placeholder="Old Password"/>
            <span asp-validation-for="Input.OldPassword" class="text-red-500 dark:text-red-400 text-xs mt-1 font-bold block"></span>
        </div>

        <div class="group">
            <label asp-for="Input.NewPassword"
                   class="block text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider mb-1"></label>
            <input asp-for="Input.NewPassword"
                   class="block w-full px-0 py-2 bg-transparent border-b-2 border-on-surface/20 focus:border-primary focus:ring-0 dark:border-white/20 dark:focus:border-white transition-colors placeholder-transparent text-on-surface dark:text-dark-on-surface font-medium"
                   autocomplete="new-password" aria-required="true" placeholder="New Password"/>
            <span asp-validation-for="Input.NewPassword" class="text-red-500 dark:text-red-400 text-xs mt-1 font-bold block"></span>
        </div>

        <div class="group">
            <label asp-for="Input.ConfirmPassword"
                   class="block text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider mb-1"></label>
            <input asp-for="Input.ConfirmPassword"
                   class="block w-full px-0 py-2 bg-transparent border-b-2 border-on-surface/20 focus:border-primary focus:ring-0 dark:border-white/20 dark:focus:border-white transition-colors placeholder-transparent text-on-surface dark:text-dark-on-surface font-medium"
                   autocomplete="new-password" aria-required="true" placeholder="Confirm Password"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 dark:text-red-400 text-xs mt-1 font-bold block"></span>
        </div>

        <div class="pt-4">
            <button type="submit"
                    class="w-full bg-primary text-on-primary font-bold py-3 px-4 rounded-xl hover:bg-primary-hover hover:scale-[1.02] active:scale-95 transition-all duration-300 shadow-lg hover:shadow-primary/30 dark:bg-primary-dark dark:text-dark-on-primary dark:hover:shadow-white/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                Update Password
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
