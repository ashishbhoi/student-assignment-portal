@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="max-w-lg mx-auto bg-surface dark:bg-dark-surface rounded-lg shadow-md p-8">
    <h3 class="text-2xl font-bold text-on-surface dark:text-dark-on-surface mb-6">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage"/>

    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 dark:text-red-400" role="alert"></div>

        <div class="mb-4">
            <label asp-for="Input.OldPassword"
                   class="block text-sm font-medium text-on-surface-variant dark:text-gray-400 mb-1"></label>
            <input asp-for="Input.OldPassword"
                   class="w-full px-4 py-2 bg-surface-container-highest dark:bg-gray-600 border border-outline dark:border-gray-500 rounded-md focus:ring-primary focus:border-primary"
                   autocomplete="current-password" aria-required="true" placeholder="Please enter your old password."/>
            <span asp-validation-for="Input.OldPassword" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Input.NewPassword"
                   class="block text-sm font-medium text-on-surface-variant dark:text-gray-400 mb-1"></label>
            <input asp-for="Input.NewPassword"
                   class="w-full px-4 py-2 bg-surface-container-highest dark:bg-gray-600 border border-outline dark:border-gray-500 rounded-md focus:ring-primary focus:border-primary"
                   autocomplete="new-password" aria-required="true" placeholder="Please enter your new password."/>
            <span asp-validation-for="Input.NewPassword" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
        </div>

        <div class="mb-6">
            <label asp-for="Input.ConfirmPassword"
                   class="block text-sm font-medium text-on-surface-variant dark:text-gray-400 mb-1"></label>
            <input asp-for="Input.ConfirmPassword"
                   class="w-full px-4 py-2 bg-surface-container-highest dark:bg-gray-600 border border-outline dark:border-gray-500 rounded-md focus:ring-primary focus:border-primary"
                   autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password."/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
        </div>

        <button type="submit"
                class="w-full bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
            Update password
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
