@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="max-w-lg mx-auto bg-surface rounded-lg shadow-md p-8">
    <h3 class="text-2xl font-bold text-on-surface mb-6">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage"/>

    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>

        <div class="mb-4">
            <label asp-for="Username" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
            <input asp-for="Username"
                   class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary"
                   placeholder="Please choose your username." disabled/>
        </div>

        <div class="mb-4">
            <label asp-for="Input.Name" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
            <input asp-for="Input.Name"
                   class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary"
                   placeholder="Please enter your name."/>
            <span asp-validation-for="Input.Name" class="text-red-500 text-sm mt-1"></span>
        </div>

        @if (Model.IsStudent)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="mb-4">
                    <label asp-for="Input.Class" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                    <select asp-for="Input.Class" asp-items="Html.GetEnumSelectList<StudentClass>()"
                            class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary">
                        <option>Select Class</option>
                    </select>
                    <span asp-validation-for="Input.Class" class="text-red-500 text-sm mt-1"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Input.Section"
                           class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                    <select asp-for="Input.Section" asp-items="Html.GetEnumSelectList<StudentSection>()"
                            class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary">
                        <option>Select Section</option>
                    </select>
                    <span asp-validation-for="Input.Section" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>
        }

        <div class="mb-6">
            <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
            <input asp-for="Input.PhoneNumber"
                   class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary"
                   placeholder="Please enter your phone number."/>
            <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-sm mt-1"></span>
        </div>

        <button id="update-profile-button" type="submit"
                class="w-full bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
            Save
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
