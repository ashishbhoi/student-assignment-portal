@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="max-w-lg mx-auto bg-surface rounded-lg shadow-md p-8">
    <h3 class="text-2xl font-bold text-on-surface mb-6">@ViewData["Title"]</h3>

    <div class="space-y-4">
        <p class="text-on-surface-variant">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="font-bold text-error">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div class="flex space-x-4 mt-6">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="bg-primary text-on-primary font-bold py-2 px-4 rounded-md hover:bg-primary-dark" type="submit">Download</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="bg-error text-on-error font-bold py-2 px-4 rounded-md hover:bg-error-dark">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
