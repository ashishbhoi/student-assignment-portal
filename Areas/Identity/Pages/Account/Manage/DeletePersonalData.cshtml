@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="rounded-2xl border border-white/40 bg-white/40 backdrop-blur-xl shadow-xl p-8 dark:border-white/10 dark:bg-black/30">
    <h3 class="text-2xl font-bold text-on-surface dark:text-dark-on-surface mb-6 drop-shadow-sm">@ViewData["Title"]</h3>

    <div class="rounded-lg border border-error/20 bg-error/10 p-4 mb-8 backdrop-blur-sm text-error dark:text-red-400 font-medium">
        <p>
            <strong class="font-bold block mb-1">Deleting this data will permanently remove your account, and this cannot be
                recovered.</strong>
        </p>
    </div>

    <div>
        <form id="delete-user" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 dark:text-red-400 text-sm font-medium" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="group">
                    <label asp-for="Input.Password"
                           class="block text-xs font-bold text-on-surface/70 dark:text-dark-on-surface/70 uppercase tracking-wider mb-1"></label>
                    <input asp-for="Input.Password"
                           class="block w-full px-0 py-2 bg-transparent border-b-2 border-on-surface/20 focus:border-primary focus:ring-0 dark:border-white/20 dark:focus:border-white transition-colors placeholder-transparent text-on-surface dark:text-dark-on-surface font-medium"
                           autocomplete="current-password" aria-required="true"
                           placeholder="Please enter your password."/>
                    <span asp-validation-for="Input.Password"
                          class="text-red-500 dark:text-red-400 text-xs mt-1 font-bold block"></span>
                </div>
            }
            <div class="pt-4">
                <button
                    class="w-full bg-red-600 text-white font-bold py-3 px-4 rounded-xl hover:bg-red-700 hover:scale-[1.02] active:scale-95 transition-all duration-300 shadow-lg hover:shadow-red-600/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                    type="submit">Delete data and close my account
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
