@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="max-w-lg mx-auto bg-surface rounded-lg shadow-md p-8">
    <h3 class="text-2xl font-bold text-on-surface mb-4">@ViewData["Title"]</h3>

    <div class="bg-error-container text-on-error-container p-4 rounded-md mb-6">
        <p>
            <strong class="font-bold">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
    </div>

    <div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="mb-6">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-on-surface-variant mb-1"></label>
                    <input asp-for="Input.Password" class="w-full px-4 py-2 bg-surface-container-highest border border-outline rounded-md focus:ring-primary focus:border-primary" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1"></span>
                </div>
            }
            <button class="w-full bg-error text-on-error font-bold py-2 px-4 rounded-md hover:bg-error-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-error" type="submit">Delete data and close my account</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
